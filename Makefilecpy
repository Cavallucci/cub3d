NAME	= cub3d

CC 		= clang

CFLAGS = -Wall -Wextra -Werror

FLAGS = -Lmlx_linux -lmlx -L/usr/lib -Imlx_linux -lXext -lX11 -lm -lz

INCLUDE = include

SRC_PATH    = src

OBJ_PATH    = obj

SOURCES =	parsing.c \

SRCS = $(addprefix $(SRC_PATH)/,$(SOURCES))

OBJS = $(addprefix $(OBJ_PATH)/,$(SOURCES:.c=.o))

NOC     = \033[0m
RED     = \033[1;31m
GREEN   = \033[1;32m
YELLOW  = \033[1;33m
BLUE    = \033[1;34m
WHITE   = \033[1;37m

PATH_MLX = mlx_linux

all: ${NAME}

#.c.o:
#	${CC} ${CFLAGS} -I/usr/include -Imlx_linux -c $< -o ${<:.c=.o}

$(NAME):	$(OBJS)
			make -C $(PATH_MLX)
			${CC} $(SRCS) $(FLAGS) -o $(NAME)
			@$(CC) $(CFLAGS) -I/usr/include -Imlx_linux -c -o $@ $^
			@echo "$(GREEN)$@$(NOC)"

$(OBJ_PATH)/%.o: $(SRC_PATH)/%.c $(INCLUDE)/$(NAME).h
	@mkdir -p obj
	@$(CC) $(CFLAGS) -I$(INCLUDE) -c -o $@ $<
	@echo "$(BLUE)clang $(WHITE)$(notdir $@)$(NOC)"

#clean:
#	make -C $(PATH_MLX) clean
#	${RM} ${OBJS}

#fclean: clean
#	make -C $(PATH_MLX) clean
#	${RM} ${NAME}

clean:
	@echo "$(RED)clean$(NOC)"
	@rm -rf $(OBJ_PATH)

fclean: clean
	@echo "$(RED)fclean$(NOC)"
	@rm -f $(NAME)


re: fclean all

.PHONY: all clean fclean re
